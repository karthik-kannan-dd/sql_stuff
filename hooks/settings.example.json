{
  "permissions": {
    "allow": [
      "Bash(snow sql:*)",
      "Bash(python:*)",
      "Bash(streamlit run:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/path/to/your/hooks/validate-snow-sql.sh"
          }
        ]
      }
    ]
  }
}
